.friends {
    .warning {
        display: inline-flex;
        flex-direction: row;
        i {
            margin-top: 7px;
            margin-right: 10px;
        }
        #animate {
            animation: iconAnimate 1.33s ease-in-out infinite;
        }
    }

    .content {
        ul {
            list-style: none;
            margin:0 auto; 
            width:100%; 
            overflow:hidden;
            li {
                margin: 10px 20px;
                float:left;
                width:150px
                img {
                    display:block; 
                    width:140px; 
                    height:140px;
                }

                a:hover img {
                    padding: 0px;
                    border: 2px solid darkgrey;
                }
                
                span {
                    text-align: center;
                    display:block;
                    width:100%;
                    height:30px;
                    line-height:30px;
                }
             }
        }
        
    }
}